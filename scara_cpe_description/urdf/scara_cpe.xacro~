<robot name="scara_cpe" xmlns:xacro="http://ros.org/wiki/xacro" >

  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find scara_cpe)/urdf/scara_cpe.gazebo" />

		 
  <xacro:property name="Base_LENGTH" value="0.06" />
  <xacro:property name="Link1_LENGTH" value="0.08" />
  <xacro:property name="Link2_LENGTH" value="0.047" />
  <xacro:property name="Base_HEIGHT" value="0.03" />
  <xacro:property name="Link2_HEIGHT" value="-0.025" />
  <xacro:property name="PI_half" value="1.57079632679" />



  <!-- LINK -->

  <link name="world"/>

  <link name="camera_link">
  <inertial>
    <mass value="0.001" />
    <origin xyz="0 0 0" />
    <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
             iyy="0.0001" iyz="0.0"
             izz="0.0001" />
    </inertial>
  </link>

  <link name="base_link">

    <visual>
      <origin xyz="0 0.034 0" rpy="-${PI_half} 0 -${PI_half}" />
      <geometry>
        <mesh filename="package://scara_cpe/urdf/scara_cpe-base_link.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0.025 0" rpy="0 0 0" />
      <mass value="0.1"/>
      <inertia
        ixx="0.0001" ixy="1e-12" ixz="1e-12"
        iyy="0.0001" iyz="1e-12"
        izz="0.0001"/>
    </inertial>    

  </link>

  <link name="link1" >

    <visual>
      <origin xyz="0 -0.012 0" rpy="-${PI_half} 0 -${PI_half}" />
      <geometry>
        <mesh filename="package://scara_cpe/urdf/scara_cpe-link_1.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 ${Link1_LENGTH/2} 0" rpy="0 0 0" />
      <geometry>
        <box size="0.02 ${Link1_LENGTH/2} 0.05"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0.04 0" rpy="0 0 0" />
      <mass value="0.1"/>
      <inertia
        ixx="0.00003" ixy="1e-12" ixz="1e-12"
        iyy="0.00003" iyz="1e-12"
        izz="0.00003"/>
    </inertial>   

  </link>


  <link name="link2" >

    <visual>
	  <origin xyz="0.0133 -0.092 0" rpy="-${PI_half} 0 -1.42579632679" />  <!-- -1.42579632679  - pi/2 + 0.145 -->
      <geometry>
        <mesh filename="package://scara_cpe/urdf/scara_cpe-link_2.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 ${Link2_LENGTH/2} 0" rpy="0 0 0" />
      <geometry>
        <box size="0.032 ${Link2_LENGTH} 0.06"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0.02 0" rpy="0 0 0" />
      <mass value="0.1"/>
      <inertia
